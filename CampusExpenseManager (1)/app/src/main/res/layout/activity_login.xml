 <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5"> <!-- Màu nền sáng -->

    <!-- Icon Con Heo Đất -->
    <ImageView
        android:id="@+id/ivPiggyBank"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_piggy_bank"
        android:contentDescription="Con heo đất"
        android:layout_marginBottom="24dp" />

    <!-- Ô nhập tài khoản -->
    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên đăng nhập"
        android:padding="14dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginTop="12dp"
        android:textColorHint="#808080"
    android:textColor="#000000"
    android:drawableLeft="@android:drawable/ic_menu_myplaces"
    android:drawablePadding="10dp"/>

    <!-- Ô nhập mật khẩu -->
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@android:drawable/edit_text"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:drawablePadding="10dp"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:padding="14dp"
        android:textColor="#000000"
        android:textColorHint="#808080" />

    <!-- Nút Đăng Nhập -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng Nhập"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FF4081"
    android:textColor="@android:color/white"
    android:padding="12dp" />

    <!-- Nút Đăng Ký (Chuyển sang màn hình đăng ký) -->
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng Ký"
        android:layout_marginTop="12dp"
        android:backgroundTint="#FF80AB"
    android:textColor="@android:color/white"
    android:padding="12dp" />
</LinearLayout>
